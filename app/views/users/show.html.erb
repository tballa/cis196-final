<div class="row">
  <div class="col-12">
    <div class="float-right">
      <% if logged_in? %>
        <% if admin? %>
        <% else %>
          <div class="cover-container">
            <main role="main" class="inner cover">
              <h1 class="cover-heading">Your target is <%= current_user.target %>!</h1>
              <p class="lead">
                <%= link_to "Target taken over!", '/takedown_target', class: 'button' %>
              </p>
            </main>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<br>
</div>
